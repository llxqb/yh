<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ll.to.syy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <!-- android:screenOrientation="portrait" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/bomb_nomal"
        android:label="@string/Disarm_Bombs"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/Disarm_Bombs" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoveActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/title_activity_love" >
        </activity>
        <activity
            android:name=".FriendActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/title_activity_friend" >
        </activity>
        <activity
            android:name=".FamilyActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/title_activity_family" >
        </activity>
        <activity
            android:name=".Friend_textActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/title_activity_friend_text" >
        </activity>
        <activity
            android:name=".Family_textActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/title_activity_family_text" >
        </activity>
        <activity
            android:name=".Love_textActivity"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Black.NoTitleBar"
            android:label="@string/title_activity_love_text" >
        </activity>
    </application>

</manifest>